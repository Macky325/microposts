<%= form_for(@user, :html => {:class => 'form-horizontal'}) do |f|%>
  <% if @user.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @user.errors.full_useres.each do |full_message| %>
          <li>
            <%= full_user %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="panel panel-default">
    <div class="panel-heading">
      プロフィール詳細設定
    </div>
    <div class="panel-body">
        
        <div class="form-group">
          <label class ="col-sm-2 control-label">email:</label>
          <div class ="col-sm-10">
          <%= f.text_field :email, class: "form-control", placeholder: "email"%>
          </div>
        </div>
        <div class="form-group">
          <label class ="col-sm-2 control-label">地域:</label>
          <div class ="col-sm-10">
          <%= f.text_field :place, class: "form-control", placeholder: "地域"%>
          </div>
        </div>
        <div class="form-group">
          <label class ="col-sm-2 control-label">詳細:</label>
          <div class ="col-sm-10">
          <%= f.text_area :profile, class: "form-control", placeholder: "プロフィール" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit class: "btn-primary btn-block" %>
          </div>
        </div>

    </div>
  </div>
<br/>
<% end %>